<% if(recipe != null) { %> 
    <div class="d-sm-flex align-items-center justify-content-between mb-2">
        <h1>Random Recipe</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/" class="text-dark text-decoration-none">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page"><%- recipe.name  %> </li>
            </ol>
          </nav>
    </div>
    <div class="row">
        
        <div class="col-12 col-md-5">
        <img src="/images/<%- recipe.image%>" class="img-fluid recipe__img--md" alt="<%- recipe.name%>">
    </div>
    
        <div class="col-12 col-md-7">
            <div class="row">
                <div class="col-12">
                    <h1 class="display-3">
                        <%-recipe.name%>
                    </h1>
                </div>
                <div class="col-12 col-md-4 lead"><i class="bi bi-tag me-1"></i>
                    <%-recipe.category%>
                </div>
                <div class="col-12 lead"><i class="bi bi-clock me-1"></i>Recipe Duration <%-recipe.time %>
                </div>
                <div class="col-12 col-md-6">
                    <h1 class="display-5 py-3">Ingredients</h1>
            <ul class="list-group list-group-flush">
                <%recipe.ingredients.forEach((ele)=> {%> 
                    <li class="list-group-item"><%- ele%></li>
                <% }) %> 
            </ul>
                </div>
            </div>
    
    
    
    
    
    </div>
    </div>
    <div class="row pt-4">
        <div class="col-12">
            <h1 class="ms-5 display-5">Cooking Instructions</h1>
            <p class="px-1 fw-bolder fs-5" style="white-space: pre-line;">
                <%-recipe.instructions%>
            </p>
           
        </div>
    </div>
    
    <% } %> 
