<!-- Category Start -->

<div class="row row-cols-2  row-cols-md-3 row-cols-lg-6 g-2 g-lg-3 py-4">
    <%if ((typeof categories !='undefined') && categories.length > 0){ %>
        <%categories.forEach((ele)=>{%>
            <a href="/categories/<%- ele.name %>"
                class="text-center col category__link text-decoration-none text-dark">
                <div class="category__img shadow">
                    <img src="images/<%- ele.image %> " alt="<%- ele.name %> " loading="lazy" class="img-fluid">
                </div>
                <div class="pt-1">
                    <%- ele.name %> Food
                </div>
            </a>
            <% }) %>
                <% } %>

                    <a href="/categories" class="text-center col category__link text-decoration-none text-dark">
                        <div class="category__img shadow">
                            <img src="images/view-all.jpg" alt="" loading="lazy" class="img-fluid">
                        </div>
                        <div class="pt-1">View All Categories</div>
                    </a>

</div>

<!-- Category End -->

